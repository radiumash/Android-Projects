<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:background="@color/colorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/thumb_placeholder"
                android:id="@+id/businessImage"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp" />

            <ImageView
                android:id="@+id/subImageView"
                android:src="@drawable/premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RatingBar
                android:id="@+id/ratingBar"
                style = "?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:numStars="5"
                android:rating="5"
                android:theme="@style/RatingBar"
                android:visibility="invisible"
                android:stepSize=".1" />

            <TextView
                android:id="@+id/nameTextView"
                android:paddingLeft="10dp"
                android:autoSizeTextType="uniform"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/serviceTextView"
                android:autoSizeTextType="uniform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="#333333"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/categoryTextView"
                android:autoSizeTextType="uniform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="#333333"
                android:textSize="13sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="#333333"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="10sp" />

                <ToggleButton
                    android:id="@+id/favButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_favorite_gray_24dp"
                    android:textColorLink="@color/colorAccent"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>