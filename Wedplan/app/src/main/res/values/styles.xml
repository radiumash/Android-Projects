<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:editTextColor">@color/colorContainer</item>
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
        <item name="queryBackground">@color/colorContainer</item>
        <item name="queryHint">@string/search_title</item>
        <item name="colorControlNormal">@color/colorContainer</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorContainer</item>
        <item name="colorControlActivated">@color/duskYellow</item>
    </style>

    <style name="ToolbarColor" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorContainer</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/colorContainer</item>
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
        <item name="queryBackground">@color/colorContainer</item>
        <item name="queryHint">@string/search_title</item>
        <item name="colorControlNormal">@color/colorContainer</item>
    </style>
</resources>
